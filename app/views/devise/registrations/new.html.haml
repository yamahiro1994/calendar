.wrapper
  .form-wrapper
    %h1 新規登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "名前", class: "input_name"
      .field
        = f.email_field :email, type: "email", placeholder: "メールアドレス", autocomplete: "email", class: "email_form", required: true
      .field
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（半角６文字以上）", class: "input_pass"
      .actions
        = f.submit "登録する", class: "btn"
    .form-footer
      = render "devise/shared/links"
